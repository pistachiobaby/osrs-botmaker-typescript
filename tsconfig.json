{
	"compileOnSave": false,
	"extends": ["@tsconfig/node20/tsconfig"],
	"compilerOptions": {
		"rootDir": ".",
		"sourceMap": false,
		"declaration": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"lib": [
			"ES6",
			"ES2015.Collection",
			"ES2017.Object",
			"ES2016.Array.Include"
		],
		"target": "es6",
		"module": "ES6",
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"baseUrl": ".",
		"checkJs": false,
		"allowJs": true,
		"resolveJsonModule": true,
		"moduleResolution": "Node",
		"outDir": "./dist",
		"types": [],
		"plugins": [],
		"typeRoots": ["./rhino.d.ts"]
	},
	"include": ["src/**/*.ts", "tests/**/*.ts"],
	"exclude": ["node_modules", "tmp"]
}
